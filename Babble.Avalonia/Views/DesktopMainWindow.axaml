<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:localization="clr-namespace:Avalonia.Localizer.Core.Localization"
        xmlns:views="clr-namespace:Babble.Avalonia"
        mc:Ignorable="d"
        x:Class="Babble.Avalonia.Views.DesktopMainWindow"
        Title="Babble App v2.0.6"
        Width="700" Height="700"
        Background="#2D2D2D">

	<Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="1" Margin="0,10,0,0">
			<TabItem Header="{localization:Localize babble.camPage}" x:Name="CameraHeaderText" Foreground="White">
				<views:CamView/>
			</TabItem>
			<TabItem Header="{localization:Localize babble.settingsPage}" x:Name="AlgoHeaderText" Foreground="White">
				<views:AlgoView/>
			</TabItem>
			<TabItem Header="{localization:Localize babble.algoSettingsPage}" x:Name="SettingsHeaderText" Foreground="White">
				<views:SettingsView/>
			</TabItem>
			<TabItem Header="{localization:Localize babble.calibrationPage}" x:Name="CalibrationHeaderText" Foreground="White">
				<views:CalibrationView/>
			</TabItem>
        </TabControl>
    </Grid>
</Window>