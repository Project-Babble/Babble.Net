<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Babble.Avalonia"
        mc:Ignorable="d"
        x:Class="Babble.Avalonia.Views.DesktopMainWindow"
        Title="Babble App v2.0.6"
        Width="700" Height="700"
        Background="#2D2D2D">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="1" Margin="0,10,0,0">
            <TabItem Header="Cam" x:Name="CameraHeaderText" Foreground="White" FontSize="20">
                <views:CamView/>
            </TabItem>
            <TabItem Header="Algo Settings" x:Name="AlgoHeaderText" Foreground="White" FontSize="20">
                <views:AlgoView/>
            </TabItem>
            <TabItem Header="Settings" x:Name="SettingsHeaderText" Foreground="White" FontSize="20">
                <views:SettingsView/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>