<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Babble.Avalonia.AlgoView"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
	<Border Background="#3D3D3D" CornerRadius="3" Padding="10">
		<StackPanel Spacing="5">
			<TextBlock Text="{Binding ModelSettingsText}"
					 x:Name="ModelSettingsText"
					 Foreground="White"
					 FontWeight="Bold"/>

			<TextBlock Text="{Binding ModelFileText}" x:Name="ModelFileText" Foreground="White"/>
			<TextBox Text=""
					x:Name="ModelFileEntryText"
					Background="#2D2D2D"
					Foreground="White"/>

			<Grid ColumnDefinitions="*,*,Auto">
				<StackPanel Grid.Column="0" Spacing="5">
					<TextBlock Text="{Binding InferenceThreadsText}"
							 x:Name="InferenceThreadsText"
							 Foreground="White"/>
					<TextBox Text=""
							x:Name="InferenceThreadsEntryText"
							Background="#2D2D2D"
							Foreground="White"/>
				</StackPanel>

				<StackPanel Grid.Column="1" Spacing="5">
					<TextBlock Text="{Binding RuntimeText}" x:Name="RuntimeText" Foreground="White"/>
					<ComboBox SelectedIndex="0"
							Background="#2D2D2D"
							Foreground="White">
						<ComboBoxItem>ONNX</ComboBoxItem>
					</ComboBox>
				</StackPanel>

				<CheckBox Grid.Column="2"
						 Content="{Binding UseGPUText}"
						 x:Name="UseGPUText"
						 IsChecked="True"
						 Foreground="White"
						 VerticalAlignment="Bottom"/>
			</Grid>

			<TextBlock Text="{Binding ModelOutputMultiplierText}"
					 x:Name="ModelOutputMultiplierText"
					 Foreground="White"/>
			<TextBox Text=""
					x:Name="ModelOutputMultiplierEntryText"
					Background="#2D2D2D"
					Foreground="White"/>

			<TextBlock Text="{Binding CalibrationDeadzoneText}"
					 x:Name="CalibrationDeadzoneText"
					 Foreground="White"/>
			<TextBox Text=""
					x:Name="CalibrationDeadzoneEntryText"
					Background="#2D2D2D"
					Foreground="White"/>

			<TextBlock Text="{Binding OneEuroFilterText}"
					 x:Name="OneEuroFilterText"
					 Foreground="White"
					 FontWeight="Bold"
					 Margin="0,10,0,0"/>

			<Grid ColumnDefinitions="*,*">
				<StackPanel Grid.Column="0" Spacing="5">
					<TextBlock Text="{Binding MinFrequencyCutoffText}"
							 x:Name="MinFrequencyCutoffText"
							 Foreground="White"/>
					<TextBox Text=""
							x:Name="MinFrequencyCutoffEntryText"
							Background="#2D2D2D"
							Foreground="White"/>
				</StackPanel>

				<StackPanel Grid.Column="1" Spacing="5">
					<TextBlock Text="{Binding SpeedCoefficientText}"
							 x:Name="SpeedCoefficientText"
							 Foreground="White"/>
					<TextBox Text=""
							x:Name="SpeedCoefficientEntryText"
							Background="#2D2D2D"
							Foreground="White"/>
				</StackPanel>
			</Grid>
		</StackPanel>
	</Border>
</UserControl>