<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="Babble.Maui.CameraPage"
             Title="Cam">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15" BackgroundColor="#2D2D2D">
            <Label Text="Camera Address" TextColor="White"/>
            <Entry x:Name="CameraAddress" Text="" TextColor="White" BackgroundColor="#3D3D3D" Completed="OnCameraAddressChanged"/>
            <Button Text="Preview Camera (Slow!)" BackgroundColor="#4CAF50" TextColor="White" Clicked="OnPreviewCameraClicked"/>

            <skia:SKCanvasView 
                x:Name="MouthCanvasView" 
                PaintSurface="OnCanvasViewPaintSurface" 
                HorizontalOptions="Center"
                WidthRequest="0"
                HeightRequest="0"/>
            <ActivityIndicator x:Name="MouthCanvasActivityView" IsRunning="false" />

        </StackLayout>
    </ScrollView>
</ContentPage>