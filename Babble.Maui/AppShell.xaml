<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Babble.Maui"
    x:Class="Babble.Maui.AppShell"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarIsVisible="True"
    Shell.TabBarBackgroundColor="#2D2D2D"
    Shell.TabBarTitleColor="White"
    Shell.TabBarUnselectedColor="LightGray"
    Title="Babble.Maui">

    <TabBar>
        <Tab Title="Cam">
            <ShellContent ContentTemplate="{DataTemplate local:CameraPage}"/>
        </Tab>
        <Tab Title="Settings">
            <ShellContent ContentTemplate="{DataTemplate local:SettingsPage}"/>
        </Tab>
        <Tab Title="Algo Settings">
            <ShellContent ContentTemplate="{DataTemplate local:AlgorithmSettingsPage}"/>
        </Tab>
    </TabBar>

</Shell>
